@model DogCarePlatform.Web.ViewModels.Notification.NotificationViewModel
@{
    ViewData["Title"] = "GoToNotification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (Model.Content.Contains("одобрена"))
{
    <h5 class="amber-text text-darken-2 center">Одобрена заявка <i class="material-icons lrg green-text">check</i></h5>

    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Успешна заявка!</span>
                    <p>
                        <b>@Model.Dogsitter.FirstName @Model.Dogsitter.LastName одобри вашата заявка</b>
                    </p>
                </div>
                <div class="card-action">
                    <a href="#">This is a link</a>
                    <a href="#">This is a link</a>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <h5 class="amber-text text-darken-2 center">Отхвърлена заявка<i class="material-icons lrg red-text">cross</i></h5>
}

